<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:background="#00BCD4"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_const_item_user_list_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/id_const_item_user_list_image_profile"
        android:layout_toRightOf="@+id/id_const_item_user_list_image_profile"
        android:paddingBottom="10dp"
        android:text="fullname"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/id_const_item_user_list_image_profile"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/id_const_item_user_list_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_const_item_user_list_full_name"
        android:layout_toEndOf="@+id/id_const_item_user_list_image_profile"
        android:layout_toRightOf="@+id/id_const_item_user_list_image_profile"
        android:paddingTop="10dp"
        android:text="email"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>