<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="#545454"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_id_fullname"
                android:layout_margin="10dp"
                android:textSize="20sp"
            android:textColor="@color/white"
            android:text="fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/message_id_email"
                android:layout_margin="5dp"
                android:textSize="15sp"
            android:textColor="@color/white"
            android:text="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:backgroundTint="#E1F4F4"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp">

                <ListView
                    android:id="@+id/message_id_list_view"
                    android:background="#E1F4F4"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:backgroundTint="#C9D5DE"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/message_id_send_text"
                    android:backgroundTint="#C9D5DE"
                    android:padding="10dp"
                    android:paddingLeft="25dp"
                    android:hint="Edit message"
                    android:textColorHint="#2C2C2C"
                    android:layout_margin="3dp"
                    android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

                <ImageButton
                    android:onClick="OnButtonClickSendMessage"
                    android:background="@drawable/send_button"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center"
                    android:layout_width="60dp"
                    android:layout_height="50dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>